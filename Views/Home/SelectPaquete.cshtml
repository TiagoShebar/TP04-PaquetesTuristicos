<p>
    <form action='@Url.Action("GuardarPaquete", "destino", "hotel", "aereo", "excursion")'>
        <div>
        <h2>Destino:</h2> 
            <select name="destino">
                @for(int i=0; i<ViewBag.destinos.Count; i++){
                    <option value=@i+1>@ViewBag.destinos[i]</option>
                }
            </select>
        </div>

        <div>
            <h2>Hotel:</h2>
            @for(int i=0; i<ViewBag.hoteles.Count; i++){
                    <input type="radio" name="hotel" value=@i+1><img src="~/img/hoteles/@ViewBag.hoteles[i]" width="10%" height="auto">
            }
        </div>
        
        <div>
            <h2>Aereo:</h2>
            @for(int i=0; i<ViewBag.aereos.Count; i++){
                    <input type="radio" name="aereo" value=@i+1><img src="~/img/aereos/@ViewBag.aereos[i]" width="10%" height="auto">
                }
        </div>

        <div>
            <h2>Excursion:</h2>
            @for(int i=0; i<ViewBag.excursiones.Count; i++){
                    <input type="radio" name="excursion" value=@i+1><img src="~/img/excursiones/@ViewBag.excursiones[i]" width="10%" height="auto">
                }
        </div>
        
        <input type="submit" value="Enviar paquete">
    </form>
</p>